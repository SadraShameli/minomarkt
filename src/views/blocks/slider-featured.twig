<section {{ cs('mino-slider-featured', block_layout(blockLayout)) }}>
    <div class="container">
        <div class="row">
            <div class="col-12">
                {% if fields.title %}
                    <h2 class="mino-slider-featured__title">{{ fields.title }}</h2>
                {% endif %}

                {% if fields.description %}
                    <p class="mino-slider-featured__description">{{ fields.description }}</p>
                {% endif %}

                <div class="swiper">
                    <div class="swiper-wrapper">
                        {% for item in fields.items %}
                            <div class="swiper-slide">
                                <a
                                    class="mino-slider-featured__item"
                                    href="{{ item.link.url }}"
                                    title="{{ item.link.title }}"
                                    target="{{ item.link.target }}"
                                >
                                    <div class="mino-slider-featured__image-wrapper">
                                        {% set image = get_image(item.image) %}

                                        {% if image %}
                                            <img
                                                class="mino-slider-featured__image"
                                                src="{{ image.src('medium') }}"
                                                srcset="{{ image.srcset }}"
                                                sizes="{{ image.img_sizes }}"
                                                alt="{{ image.alt }}"
                                                loading="lazy"
                                            />
                                        {% endif %}
                                    </div>

                                    {% if item.title %}
                                        <div class="mino-slider-featured__content">
                                            <span class="mino-slider-featured__item-title">
                                                {{ item.title }}

                                                <i class="mino-slider-featured__icon icon-arrow-up-right"></i>
                                            </span>
                                        </div>
                                    {% endif %}
                                </a>
                            </div>
                        {% endfor %}
                    </div>

                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>
                </div>
            </div>
        </div>
    </div>
</section>
