{% if menu %}
    <ul class="{{ customClass }}">
        {% for item in items %}
            <li class="{{ item.classes|join(' ') }}">
                <a
                    href="{{ item.link }}"
                    target="{{ item.target }}"
                >
                    {{ item.title }}
                </a>

                {% if item.children|length > 0 %}
                    {{ include('menu.twig', {
                        items: item.children,
                    }) }}
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endif %}
