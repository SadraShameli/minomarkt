<section {{ cs('mino-card-grid block-padding', block_layout(blockLayout)) }}>
    <div class="container">
        <div class="row">
            <div class="col-12">
                {% if fields.title or fields.description %}
                    <div class="mino-card-grid__header">
                        {% if fields.title %}
                            <h2 class="mino-card-grid__title">{{ fields.title }}</h2>
                        {% endif %}

                        {% if fields.description %}
                            <p class="mino-card-grid__description">{{ fields.description }}</p>
                        {% endif %}
                    </div>
                {% endif %}

                <div class="mino-card-grid__grid">
                    {% for item in fields.items %}
                        <div class="mino-card-grid__item block-shadow">
                            <div class="mino-card-grid__icon">
                                {% if item.icon %}
                                    {{ fetch_svg(item.icon) }}
                                {% endif %}
                            </div>

                            {% if item.title %}
                                <h3 class="mino-card-grid__item-title">{{ item.title }}</h3>
                            {% endif %}

                            {% if item.description %}
                                <p class="mino-card-grid__item-description">{{ item.description }}</p>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>
