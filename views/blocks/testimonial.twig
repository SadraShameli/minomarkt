<section {{ cs('mino-testimonial block-padding', block_layout(blockLayout)) }}>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="mino-testimonial__wrapper">
                    {% if fields.title and fields.show_title %}
                        <h2 class="mino-testimonial__title">{{ fields.title }}</h2>
                    {% endif %}

                    {% if fields.description and fields.show_description %}
                        <div class="mino-testimonial__description col-12 col-lg-8 mx-auto">
                            {{ fields.description }}
                        </div>
                    {% endif %}

                    {% if testimonials %}
                        <div class="mino-testimonial__content">
                            {% if fields.display_style == 'slider' %}
                                <div class="swiper">
                                    <div class="mino-testimonial__slider-wrapper swiper-wrapper">
                                        {% for testimonial in testimonials %}
                                            <div class="mino-testimonial__slider-slide swiper-slide">
                                                <div class="mino-testimonial__card">
                                                    {{ include('components/testimonial-item.twig', {
                                                        name: testimonial.name,
                                                        author: testimonial.author,
                                                        image: testimonial.image,
                                                        quote: testimonial.quote,
                                                        rating: testimonial.rating,
                                                        show_rating: fields.show_ratings,
                                                    }) }}
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>

                                    <div class="mino-testimonial__button-wrapper">
                                        <div class="mino-testimonial__button-prev js-swiper-button-prev">
                                            {{ fetch_svg('arrow-left-circle') }}
                                        </div>

                                        <div class="mino-testimonial__button-next js-swiper-button-next">
                                            {{ fetch_svg('arrow-right-circle') }}
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <div class="mino-testimonial__grid">
                                    {% for testimonial in testimonials %}
                                        {% set image = Image(testimonial.image) %}
                                        <div class="mino-testimonial__card">
                                            {{ include('components/testimonial-item.twig', {
                                                name: testimonial.name,
                                                author: testimonial.author,
                                                image: image,
                                                quote: testimonial.quote,
                                                rating: testimonial.rating,
                                                show_rating: fields.show_ratings,
                                            }) }}
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>
