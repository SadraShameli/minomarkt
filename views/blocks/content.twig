<section {{ cs('mino-content block-padding', block_layout(blockLayout)) }}>
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-9 mx-auto">
                {% if fields.title %}
                    <h2 class="mino-content__title">
                        {{ fields.title }}
                    </h2>
                {% endif %}

                {% if fields.content %}
                    <div class="mino-content__content">
                        {{ fields.content }}
                    </div>
                {% endif %}

                {% if fields.buttons|length > 0 %}
                    <div class="mino-content__button-wrapper">
                        {% for button in fields.buttons %}
                            {{ include('components/button.twig', {
                                class: 'mino-content__button',
                            }) }}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>
