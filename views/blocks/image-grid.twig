<section {{ cs('mino-image-grid block-padding', block_layout(blockLayout)) }}>
    <div class="container">
        <div class="row">
            <div class="col-12">
                {% if fields.title or fields.description %}
                    <div class="mino-image-grid__header col-12 col-lg-8">
                        {% if fields.title %}
                            <h2 class="mino-image-grid__title">{{ fields.title }}</h2>
                        {% endif %}

                        {% if fields.description %}
                            <p class="mino-image-grid__description">{{ fields.description }}</p>
                        {% endif %}
                    </div>
                {% endif %}

                <div class="mino-image-grid__grid">
                    {% for item in fields.items %}
                        <a
                            class="mino-image-grid__item"
                            href="{{ item.link.url }}"
                            title="{{ item.link.title }}"
                            target="{{ item.link.target }}"
                        >
                            {% set imageObj = get_image(item.image) %}
                            {% if imageObj %}
                                <img
                                    class="mino-image-grid__image"
                                    src="{{ imageObj.src('medium') }}"
                                    srcset="{{ imageObj.srcset }}"
                                    sizes="{{ imageObj.img_sizes }}"
                                    alt="{{ imageObj.alt }}"
                                    loading="lazy"
                                />
                            {% endif %}

                            {% if item.link %}
                                <div class="mino-image-grid__title-wrapper">
                                    <span class="mino-image-grid__item-title">{{ item.link.title }}</span>
                                </div>
                            {% endif %}
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>
